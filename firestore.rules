rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla global: Nadie puede leer/escribir nada por defecto
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Regla para la Galería (portfolio_items)
    match /portfolio_items/{itemId} {
      // CUALQUIERA puede LEER (ver la galería)
      allow read: if true;
      
      // SOLO el ADMIN puede ESCRIBIR (subir, borrar, editar)
      // Verificamos que el usuario sea el administrador específico
      allow write: if request.auth != null && request.auth.uid == '9mMHeUq19cTFBvSMaS9BWAdYBk43';
    }
    
    // Regla para el contenido del sitio (fotos de perfil, textos)
    match /site_content/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
